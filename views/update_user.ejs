<!-- Include header -->
<%- include('include/_header')%>
<!-- Include header -->


<main id="site-main">
    <div class="container">
      <div class="box-nav d-flex jusitfy-between">
        <div class="filter">
          <a href="/">
            <i class="fa-solid fa-arrow-left"></i> All user
          </a>
        </div>
      </div>
      <div class="form-title text-center">
          <h2 class="text-dark">Update User</h2>
          <span>Use the below form to add an account</span>
      </div>
      <!-- Form handeling -->
      <form method="POST" id="update_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="name" value="" placeholder="Monkey D Luffy">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="email" value="" placeholder="example@gmail.com">
            </div>
            <div class="form-group">
                <label for="gender">Gender</label>
                <div class="radio inline">
                    <input type="hidden" name="id" value="">
                    <input type="radio" name="gender" value="Male" >
                    <label for="gender">Male</label>
                </div>
                <div class="radio inline">
                    <input type="hidden" name="id" value="">
                    <input type="radio" name="gender" value="Female" >
                    <label for="gender">Female</label>
                </div>
            </div>
            <div class="form-group">
                <label for="gender">Status</label>
                <div class="radio inline">
                    <input type="hidden" name="id" value="">
                    <input type="radio" name="gender" value="Active" >
                    <label for="gender">Active</label>
                </div>
                <div class="radio inline">
                    <input type="hidden" name="id" value="">
                    <input type="radio" name="gender" value="Inactive" >
                    <label for="gender">Inactive</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </form>
    </div>
  </main>

